{
  // Lint CSS files
  // https://github.com/stubbornella/csslint/wiki/Rules

  // Compatibility
  "adjoining-classes"           : false,  // Disallow adjoining classes
  "box-sizing"                  : false,  // Disallow box sizing
  "compatible-vendor-prefixes"  : false,  // Require compatible vendor prefixes
  "gradients"                   : false,  // Require all gradient definitions

  // Possible Errors
  "box-model"                   : false,  // Beware of box model size

  // Performance
  "duplicate-background-images" : false,  // Disallow duplicate background images
  "universal-selector"          : false,  // Disallow universal selector

  // Maintainability & Duplication
  "floats"                      : false,  // Disallow too many floats
  "font-sizes"                  : false,  // Don't use too many font size declarations

  // Accessibility
  "outline-none"                : false,  // Disallow outline:none

  // OOCSS
  "qualified-headings"          : false,  // Disallow qualified headings
  "unique-headings"             : false   // Headings should only be defined once
}